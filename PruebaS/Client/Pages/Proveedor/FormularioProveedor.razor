@inject NavigationManager nm
@inject CategoriaRepositorio repositorio
@inject ProveedorRepositorio rp

<EditForm Model="proveedor" OnValidSubmit="OnValidSubmit">

    <DataAnnotationsValidator />
    <div>
        <div class="form-group mx-sm-3 mb-2">
            <label>Nombre del proveedor: </label>
            <div>
                <InputText class="form-control" @bind-Value="@proveedor.Nombre"></InputText>
                <ValidationMessage For="@(() => proveedor.Nombre)" />
            </div>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label>Ruc: </label>
            <div>
                <InputText class="form-control" @bind-Value="@proveedor.Ruc"></InputText>
                <ValidationMessage For="@(() => proveedor.Ruc)" />
            </div>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label>Dirección: </label>
            <div>
                <InputText class="form-control" @bind-Value="@proveedor.Direccion"></InputText>
                <ValidationMessage For="@(() => proveedor.Direccion)" />
            </div>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label>Teléfono: </label>
            <div>
                <InputText class="form-control" @bind-Value="@proveedor.Telefono"></InputText>
                <ValidationMessage For="@(() => proveedor.Telefono)" />
            </div>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label>Correo: </label>
            <div>
                <InputText class="form-control" @bind-Value="@proveedor.Correo"></InputText>
                <ValidationMessage For="@(() => proveedor.Correo)" />
            </div>
        </div>
        
        
    </div>
    <div>
        <div>
            <div class="form-group mx-sm-3 mb-2">
                <button class="btn btn-success" type="submit">Guardar</button>
                <button class="btn btn-danger" type="button" @onclick="Cancelar">Regresar</button>
            </div>
        </div>
        <div>

        </div>
    </div>
</EditForm>

@code {

    [Parameter] public Proveedor proveedor { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }


    private void Cancelar()
    {
        nm.NavigateTo("proveedor/listar");
    }
    
}
